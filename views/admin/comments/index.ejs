<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,shrink-to-fit=no">
    <title>ITD Canada Students</title>
    <link href="../../stylesheets/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <aside class="span4">
          <section>
            <h1>Comments</h1>
            <a class="btn btn-info" method="get" href="/admin/comments/new" rel="nofollow">
              New
            </a>
            <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>User ID</th>
                  <th>Course ID</th>
                  <th>Class ID</th>
                  <th>Content</th>
                  <th>Related Comment ID</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                <% comments.forEach(function(comment) { %>
                  <tr>
                    <td><%= comment.id %></td>
                    <td><%= comment.user_id %></td>
                    <td><%= comment.course_id %></td>
                    <td><%= comment.class_id %></td>
                    <td><%= comment.content %></td>
                    <td><%= comment.related_comment_id %></td>
                    <td>
                      <a href="/admin/comments/<%= comment.id %>/edit">
                        Edit
                      </a>
                    </td>
                    <td>
                      <a class="btn btn-danger" method="delete" href="/admin/comments/<%= comment.id %>" rel="nofollow">
                        Delete
                      </a>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </section>
        </aside>
      </div>
    </div>
  </body>
</html>
